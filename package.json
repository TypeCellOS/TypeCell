{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0",
    "patch-package": "^6.4.7",
    "jest": "26.6.0",
    "ts-jest": "^26.5.4"
  },
  "scripts": {
    "--postinstall": "npm run bootstrap && patch-package",
    "bootstrap": "lerna bootstrap --hoist && patch-package",
    "test": "jest --coverage=true --config=jest.config.js && lerna run test-no-watch",
    "build": "lerna run build --concurrency 1",
    "watch": "npm run build && lerna run --parallel watch",
    "start": "lerna run --scope @typecell-org/editor start",
    "prepublishOnly": "npm run test && npm run build",
    "deploy": "lerna publish"
  }
}
